</div>
<script>
    let primero = document.getElementById("primero")
    let lineap = document.getElementById("lineap")
    let nombrep = document.getElementById("nombrep")

    let segundo = document.getElementById("segundo")
    let lineas = document.getElementById("lineas")
    let nombres = document.getElementById("nombres")

    let tercero = document.getElementById("tercero")
    let lineat = document.getElementById("lineat")
    let nombret = document.getElementById("nombret")

    window.addEventListener("scroll",(e)=>{
        if (window.scrollY >= 0 ) {
    
            lineap.style.width="4rem";
            nombrep.style.color="rgb(203 213 225)";

            lineas.style.width="2.5rem";
            nombres.style.color="rgb(107 114 128)";

    }
        if (window.scrollY >= 510 && window.scrollY < 1157) {
           
            lineap.style.width="2.5rem";
            nombrep.style.color="rgb(107 114 128)";

            lineas.style.width="4rem";
            nombres.style.color="rgb(203 213 225)";

            lineat.style.width="2.5rem";
            nombret.style.color="rgb(107 114 128)";
    }
        if (window.scrollY >= 1157 ) {
            
            lineat.style.width="4rem";
            nombret.style.color="rgb(203 213 225)";

            lineap.style.width="2.5rem";
            nombrep.style.color="rgb(107 114 128)";
    
    }


    })
</script>
<style>
/* #chance{ pointer-events: none !important} */
  #lineap{
    transition: 0.5s ;
  }
  #nombrep{
    transition: 0.5s ;
  }
  #lineas{
    transition: 0.5s ;
  }
  #nombres{
    transition: 0.5s ;
  }
  #lineat{
    transition: 0.5s ;
  }
  #nombret{
    transition: 0.5s ;
  }
</style>

